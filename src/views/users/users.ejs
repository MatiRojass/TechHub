<!DOCTYPE html>
<html lang="en">
    <style>
        .avatar-container {
            width: 70px; /* Ancho deseado del avatar */
            height: 70px; /* Altura deseada del avatar */
            border-radius: 50%;
            overflow: hidden;
        }
    
        .avatar-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }
    </style>
<%- include('../partials/head') %>

    <body>

        <%- include('../partials/header') %>
            <br>
            <main>
                <div class="container">
                    <section class="products-list">
                        <header class="section-header">
                            <h2>Usuarios</h2>
                        </header>
                        <hr>
                        <% users.forEach(user=> { %>
                            <br>
                            <a href="/users/<%= user.id %>" style="display: flex; gap: 10px;">
                                <figure class="avatar-container">
                                    <img class="avatar-image" src="<%= user.avatar %>" alt="<%= user.firtsName %>" style="width: 100%;">
                                </figure>
                                <article>
                                    <h3>
                                        <%= user.firstName %> <%= user.lastName %>
                                    </h3>
                                    <h4><%= user.email %></h4>
                                </article>
                            </a>
                            <br>
                            <hr>
                            
                            <% }) %>

                    </section>
                </div>
            </main>
            <br>
            <hr>
            <br>
            <%- include('../partials/footer') %>

    </body>

</html>