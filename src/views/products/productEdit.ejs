<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
    
    <body>
        
        <%- include('../partials/header') %>
        <br>
        <main>
            <section class="container">
                <h2 class="section-title">Crear producto</h2>
                
                <form  class="form-style" action="/products/<%= product.id %>/edit?_method=PUT" method="post" >
                    <div>
                        <label for="name">Nombre</label>
                        <input class="inp" type="text" name="name" id="name" value="<%= product.name %>" >
                    </div>
                    <div>
                        <label for="brand">Marca</label>
                        <input class="inp" type="text" name="brand" id="brand" value="<%= product.brand %>" >
                    </div>
                    <div>
                        <label for="price">Precio</label>
                        <input class="inp" type="number" name="price" id="price" value="<%= product.price %>" >
                    </div>
                    <div>
                        <label for="description">Descripcion</label>
                        <textarea class="inp txt-a" name="description" id="description"><%= product.description %></textarea>
                    </div>
                    <button class="btn" type="submit">Enviar</button>
                </form>
            </section>
        </main>
        
        <hr>
        
        <%- include('../partials/footer') %>

    </body>
</html>