<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>
    <style>
        .user-info{
            display: flex;
            gap: 15px;
        }

        .avatar-container {
            width: 120px; /* Ancho deseado del avatar */
            height: 120px; /* Altura deseada del avatar */
            border-radius: 50%;
            overflow: hidden;
        }
    
        .avatar-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }
    </style>
    <body>
        
        <%- include('./partials/header') %>
        <br>
        <main>
            <div class="container">
                <div class="user-info">
                    <figure class="avatar-container">
                        <img class="avatar-image" src="<%= user.avatar %>" alt="">
                    </figure>
                    <div>
                        <h2><%= user.firstName %> <%= user.lastName %></h2>
                        <h4><%= user.email %></h4>
                    </div>
                </div>

                <br>
                <a href="/users/<%= user.id %>/edit" class="btn">editar</a>
                <button style="background-color: red;" class="btn">Eliminar</button>
            </div>
        </main>
        <br>
        <hr>
        <br>
        <%- include('./partials/footer') %>

    </body>
</html>